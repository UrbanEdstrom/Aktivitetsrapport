<Window x:Class="Aktivitetsrapport.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" Height="320" Width="480" ShowInTaskbar="False" ResizeMode="CanResize">
    <Grid Margin="0" IsManipulationEnabled="True">

        <DataGrid x:Name="datagrid_settings" Margin="10,10,10,42" CanUserAddRows="false" AutoGeneratedColumns="datagrid_settings_AutoGeneratedColumns" HeadersVisibility="Column"/>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="btn_ok_Click"/>
        <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="btn_cancel_Click" RenderTransformOrigin="0.154,0.593"/>


    </Grid>
</Window>
